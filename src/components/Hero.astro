---
import CTA from "./Button.astro"

import '@fontsource/hind-madurai';

import Header from "./Header.astro";
import { SITE_TITLE } from "../consts";

---
<div class="wrapper">

<Header title={SITE_TITLE} />
<section class="hero">

  <h2>Welcome to lethal kick boxing academy</h2>
  <h1>THE BEST KICKBOXING GYM<br>
    IN CHENNAI</h1>
  <p>Our gym is dedicated to providing top-notch training and guidance to brindividuals of all skill levels, from beginners to seasoned fighters aspiring to become champions.</p>

  <CTA cta="call today"/>

</section>
</div>

<style>
  .wrapper {
    background-image: url('../assets/images/Hero-bg.jpg') !important;
    background: lightgray 50%;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
    height: 100vh;
  }
  .hero {
    display: flex;
    flex-direction: column;
    align-items: left;
    padding: 5% 13%;
  }

  h2 {
    text-transform: uppercase;
    font-size: 1.5rem;
    font-weight: 600;
    padding-bottom: 2rem;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    padding-bottom: 2rem;
  }

  p {
    font-size: 1.4rem;
    font-weight: 400;
    padding-bottom: 2rem;
    width: 50ch;
    line-height: 115%;
  }

  @media only screen and (max-width: 500px) {
    .wrapper {
    }
    .hero {
      padding: 15% 5%;

      justify-content: center;
    }
    h2 {
      padding-bottom: 1rem;
      width: 90%;

    }
    h1 {
      line-height: 2ch;
      padding-bottom: 1rem;

    }
    p {
      line-height: 1.25;
      padding-bottom: 1rem;
      width: 90%;
    }
  }
</style>
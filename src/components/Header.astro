---
import { Image } from "astro:assets";

import Logo from "../assets/images/Logo.svg"
import CTA from "./Button.astro"


---

<header>
	<nav>
		<Image
			src={Logo}
			alt="Lethal Kickboxing Academy Logo"
			width="125"
			class="logo" />

			<CTA />
	</nav>
</header>
<style>
	nav {
		display: flex;
		justify-content: space-around;
		align-items: center;
		gap: 60%;
		padding: 2.5rem 10rem;
	}
</style>

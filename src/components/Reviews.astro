    cursor: pointer;
    z-index: 1;

}

@media screen and (max-width: 768px) {
  .carousel-container {
    align-items: left;
    height: auto;
    width: 80%
  }

  .carousel {
    align-items: center;
    width: 100%;
  }

  .star {
    width: 11rem;
  }

  p {
